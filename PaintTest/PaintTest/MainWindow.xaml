<Window x:Class="PaintTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PaintTest" Height="560" Width="680" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged">
    <Grid x:Name="MainArea">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="157*"/>
            <ColumnDefinition Width="466*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="CanvasZoom" Margin="15.22,25,8.332,25" ClipToBounds="True" Grid.ColumnSpan="3" Grid.Column="1" >
            <Canvas x:Name="CanvasDraw" MouseWheel="Canvas_MouseWheel">
                <Image x:Name="ImageDraw" RenderOptions.BitmapScalingMode="NearestNeighbor" MouseDown="ImageDraw_MouseDown" Width="Auto" Height="Auto" Stretch="Uniform"/>
            </Canvas>
        </Canvas>
    </Grid>
</Window>
